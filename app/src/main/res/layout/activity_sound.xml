<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoundActivity">

        <ImageButton
            android:id="@+id/startbutton"
            android:layout_width="70dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@android:drawable/ic_media_play"
            />


        <ImageButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/savebutton"
            android:src="@android:drawable/ic_menu_save" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/titleText"
            android:gravity="top"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/savebutton"
            android:layout_alignParentStart="true"/>



        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view1"/>



        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view2"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view3"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view4"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view5"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view6"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view6"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view7"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view8"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view8"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view9"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view9"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view10"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view10"
            android:textSize="12sp"
            android:background="@drawable/seticon"
            android:id="@+id/view11"/>



        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/view1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                        <!--                    android:orientation="vertical" -->




                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView1"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView2"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView3"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView4"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView5"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView6"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView7"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView8"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView9"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView10"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView11"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView12"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView13"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_recycler_view" />

                        <View
                            android:id="@+id/image_view"
                            android:layout_width="2dp"
                            android:layout_height="275dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/line10"/>

                </RelativeLayout>
        </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>